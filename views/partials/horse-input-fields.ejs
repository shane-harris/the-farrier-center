<%#
    This partial generates all the text and dropdown fields in the update horse and new horse pages.

    Explicitly passed in on webpage.
    @input {Boolean} updateable Determines whether or not a field should be filled from horse or not.

    Implicitly passed from horse route
    @input {Horse} horse If updateable equals true then the fields will get filled with requested horse info.

    Example: include('partials/horse-input-fields', {updateable: false})
%>

<div class="form-group">
  <label for="image">Picture</label>
  <input type="file" class="form-control" id="image" name="image">
</div>

<div class="form-group">
  <label for="name">Name(*)</label>
  <input type="text" class="form-control" id="name" name="name"
    value="<%= updateable ? horse.name : '' %>" placeholder="Enter Horse Name Here">
</div>

<div>
  <label for="gender">Gender</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="gender" id="radioMale" value="Male"
    <%- updateable && horse.gender === 'Male' ? "checked" : '' %>>
  <label class="form-check-label" for="radioMale">
    <H2>Male</H2>
  </label>
</div>

<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="gender" id="radioFemale" value="Female"
    <%- updateable && horse.gender === 'Female' ? "checked" : '' %>>
  <label class="form-check-label" for="radioFemale">
    <H2>Female</H2>
  </label>
</div>

<div class="form-group">
  <label for="temperament">Temperament:</label>
  <select class="form-control" id="temperament" name="temperament">
    <option hidden>Select Temperament</option>
    <% for ( temperament of ['Old', 'Hurting', 'Spoiled', 'Quiet', 'Nervous', 'Extremely Nervous', 'Stubborn', 'Treacherous']) { %>
    <%- include('dropdown-option.ejs', { selected: updateable ? (horse.temperament === temperament) : false, name: temperament }) %>
    <% } %>
  </select>
</div>

<div class="form-group">
  <label for="discipline">Discipline:</label>
  <select class="form-control" id="discipline" name="discipline">
    <option hidden>Select Discipline</option>
    <% for ( discipline of ['Jumping', 'Trail', 'Pleasure', 'Backyard', 'Western', 'Dressage', 'Endurance', 'Eventing', 'Racing', 'Polo']) { %>
    <%- include('dropdown-option.ejs', { selected: updateable ? (horse.discipline === discipline) : false, name: discipline }) %>
    <% } %>
  </select>
</div>

<div class="form-group">
  <label for="location">Location(*)</label>
  <input type="text" class="form-control" id="name" name="location"
    value="<%= updateable ? horse.location : '' %>" placeholder="1234 James Town Rd.">
</div>

<div class="form-group">
  <label for="owner">Owner(*)</label>
  <input type="name" class="form-control" id="owner" name="owner"
    value="<%= updateable ? horse.owner : '' %>" placeholder="Enter the owner's name here">
</div>

<div class="form-group">
  <label for="vet">Veterinarian</label>
  <input type="name" class="form-control" id="vet" name="vet"
    value="<%= updateable ? horse.vet : '' %>" placeholder="Enter the vet's name here">
</div>
<div class="form-group">
  <label for="history">History</label>
  <textarea class="form-control" id="history" name="history" rows="4"
    placeholder="Please be a happy history"><%= updateable ? horse.history : '' %></textarea>
</div>

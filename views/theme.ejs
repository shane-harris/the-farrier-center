<%- include('partials/head', { title: 'Settings: Theme' }) %>

<body>
  <%- include('partials/header-nav', { name: user.username }) %>
  <div id="page-container" class="container-fluid">
    <div class="container form">
      <h1>Theme</h1>
      <form action="/user/color-scheme" method="post">
        <div class="form-group">
          <label>Theme:</label>
          <select class="form-control" name="theme">
            <% const themes = [{ name: 'Dark', selected: true }, { name: 'Forest', selected: false }] %>
            <% for (theme of themes) { %>
            <%- include('partials/theme-option', theme) %>
            <% } %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</body>
